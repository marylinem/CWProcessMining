{
    "id": "com.demo.jointjs",
    "version": "1.0.0",
    "name": "Demo JointJS",
    "description": "A JointJS Demo",
    "newInstancePrefix": "JointJS",
    "icon": "https://www.sample.com/customwidgets/coloredbox/icon.png",
    "vendor": "Demo",
    "eula": "",
    "license": "",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-demo-jointjs",
            "url": "https://gaalve.github.io/SAC_Process_Mining/widget.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "styling",
            "tag": "com-demo-jointjs-styling",
            "url": "https://gaalve.github.io/SAC_Process_Mining/widget_styling.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "builder",
            "tag": "com-demo-jointjs-builder",
            "url": "https://gaalve.github.io/SAC_Process_Mining/widget_builder.js",
            "integrity": "",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "color": {
            "type": "string",
            "description": "Background color",
            "default": "red"
        },
        "opacity": {
            "type": "number",
            "description": "Opacity",
            "default": 1
        },
        "width": {
            "type": "integer",
            "default": 100
        },
        "height": {
            "type": "integer",
            "default": 100
        }
    },
    "methods": {
        "setColor": {
            "description": "Sets the background color.",
            "parameters": [
                {
                    "name": "newColor",
                    "type": "string",
                    "description": "The new background color"
                }
            ],
            "body": "this.color = newColor;"
        },
        "getColor": {
            "returnType": "string",
            "description": "Returns the background color.",
            "body": "return this.color;"
        }
    },
    "events": {
        "onClick": {
            "description": "Called when the user clicks the Colored Box."
        }
    }
}